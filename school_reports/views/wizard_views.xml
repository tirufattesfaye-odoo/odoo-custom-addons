<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_school_report_card_wizard_form" model="ir.ui.view">
        <field name="name">school.report.card.wizard.form</field>
        <field name="model">school.report.card.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Report Cards">
                <sheet>
                    <group>
                        <field name="academic_year_id"/>
                        <field name="student_ids" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button string="Print PDF" type="object" name="action_print_report_cards" class="btn-primary"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_report_card_wizard" model="ir.actions.act_window">
        <field name="name">Print Report Cards</field>
        <field name="res_model">school.report.card.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_school_report_card_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_school_reports_root" name="Reports" parent="school_core.menu_school_root" sequence="40"/>
    <menuitem id="menu_school_reports" name="Report Cards" parent="menu_school_reports_root" action="action_school_report_card_wizard" sequence="10"/>
</odoo>
