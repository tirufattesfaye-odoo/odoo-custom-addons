<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_student_card_template">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Report Card - <t t-esc="o.name"/></h2>
                <table class="table table-sm">
                    <tr>
                        <td><strong>Student:</strong></td>
                        <td><t t-esc="o.name"/></td>
                        <td><strong>Student Code:</strong></td>
                        <td><t t-esc="o.student_code or ''"/></td>
                    </tr>
                    <tr>
                        <td><strong>Class/Section:</strong></td>
                        <td><t t-esc="o.section_id.name if o.section_id else ''"/></td>
                        <td><strong>Academic Year:</strong></td>
                        <td><t t-esc="o.academic_year_id.name if o.academic_year_id else ''"/></td>
                    </tr>
                </table>

                <h3>Exams &amp; Grades</h3>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Exam</th>
                            <th>Subject</th>
                            <th>Score</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.exam_result_ids" t-as="res">
                            <tr>
                                <td><t t-esc="res.exam_id.name"/></td>
                                <td><t t-esc="res.subject_id.name"/></td>
                                <td><t t-esc="res.score"/></td>
                                <td><t t-esc="res.grade"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <h3>Attendance Summary</h3>
                <p>
                    Total Days: <t t-esc="o.attendance_total or '0'"/> |
                    Present: <t t-esc="o.attendance_present or '0'"/> |
                    Absent: <t t-esc="o.attendance_absent or '0'"/>
                </p>
            </div>
        </t>
    </template>
</odoo>
