<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_exam_mark_tree" model="ir.ui.view">
        <field name="name">school.exam.mark.tree</field>
        <field name="model">school.exam.mark</field>
        <field name="arch" type="xml">
            <list>
                <field name="exam_id"/>
                <field name="student_id"/>
                <field name="total_marks"/>
                <field name="percentage"/>
                <field name="result"/>
            </list>
        </field>
    </record>

    <record id="view_exam_mark_form" model="ir.ui.view">
        <field name="name">school.exam.mark.form</field>
        <field name="model">school.exam.mark</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="exam_id"/>
                        <field name="student_id"/>
                        <field name="total_marks" readonly="1"/>
                        <field name="percentage" readonly="1"/>
                        <field name="result" readonly="1"/>
                    </group>
                    <field name="line_ids">
                        <list editable="bottom">
                            <field name="subject_id"/>
                            <field name="max_marks"/>
                            <field name="pass_marks"/>
                            <field name="obtained_marks"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
