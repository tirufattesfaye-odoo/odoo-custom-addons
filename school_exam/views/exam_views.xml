<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_exam_tree" model="ir.ui.view">
        <field name="name">school.exam.tree</field>
        <field name="model">school.exam</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="academic_year_id"/>
                <field name="term_id"/>
                <field name="section_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </list>
        </field>
    </record>

    <record id="view_exam_form" model="ir.ui.view">
        <field name="name">school.exam.form</field>
        <field name="model">school.exam</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="academic_year_id"/>
                        <field name="term_id"/>
                        <field name="section_id"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <notebook>
                        <page string="Subjects">
                            <field name="exam_line_ids">
                                <list editable="bottom">
                                    <field name="subject_id"/>
                                    <field name="max_marks"/>
                                    <field name="pass_marks"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
