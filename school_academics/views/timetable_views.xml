<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_timetable_tree" model="ir.ui.view">
        <field name="name">timetable.tree</field>
        <field name="model">course.timetable</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="course_id"/>
                <field name="subject_ids"/>
                <field name="day_of_week"/>
                <field name="start_time"/>
                <field name="end_time"/>
            </list>
        </field>
    </record>

    <record id="view_timetable_form" model="ir.ui.view">
        <field name="name">timetable.form</field>
        <field name="model">course.timetable</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="course_id"/>
                        <field name="subject_ids"/>
                        <field name="day_of_week"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
