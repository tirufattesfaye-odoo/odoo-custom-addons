<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance Form -->
    <record id="view_school_attendance_form" model="ir.ui.view">
        <field name="name">school.attendance.form</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <form string="Attendance">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date"/>
                        <field name="class_id"/>
                        <field name="teacher_id"/>
                        <!-- Show state as a statusbar -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </group>
                    <notebook>
                        <page string="Attendance Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="student_id"/>
                                    <field name="status"/>
                                    <field name="remark"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <!-- Button visible only in draft -->
                    <button name="action_confirm" type="object" string="Confirm"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <!-- Button visible only in confirmed -->
                    <button name="action_draft" type="object" string="Reset to Draft"
                            invisible="state != 'confirmed'"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Attendance Tree -->
    <record id="view_school_attendance_tree" model="ir.ui.view">
        <field name="name">school.attendance.tree</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="class_id"/>
                <field name="teacher_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>
</odoo>
