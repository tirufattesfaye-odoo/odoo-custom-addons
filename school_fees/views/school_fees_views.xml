<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_school_fee_tree" model="ir.ui.view">
        <field name="name">school.fee.tree</field>
        <field name="model">school.fee</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="student_id"/>
                <field name="amount"/>
                <field name="state"/>
                <field name="invoice_id"/>
            </list>
        </field>
    </record>

    <record id="view_school_fee_form" model="ir.ui.view">
        <field name="name">school.fee.form</field>
        <field name="model">school.fee</field>
        <field name="arch" type="xml">
            <form string="School Fee">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="student_id"/>
                        <field name="amount"/>
                        <field name="currency_id"/>
                        <field name="state" readonly="1"/>
                        <field name="invoice_id" readonly="1"/>
                    </group>
                    <footer>
                        <button name="action_create_invoice" type="object"
                                string="Create Invoice" class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button name="action_mark_paid" type="object"
                                string="Mark as Paid"
                                invisible="state != 'invoiced'"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
