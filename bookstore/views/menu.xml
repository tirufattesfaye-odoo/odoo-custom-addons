<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action for Book Details -->
        <record id="action_book_details" model="ir.actions.act_window">
            <field name="name">Books</field>
            <field name="res_model">book.details</field>
            <field name="view_mode">list,form,kanban,search</field>
        </record>

        <!-- Root Menu -->
        <menuitem id="menu_bookstore_root"
                  name="Bookstore"
                  sequence="10"/>

        <!-- Submenu: Books -->
        <menuitem id="menu_book_details"
                  name="Books"
                  parent="menu_bookstore_root"
                  action="action_book_details"
                  sequence="10"/>
    </data>
</odoo>
